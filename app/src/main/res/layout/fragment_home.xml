<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:scrollbars="none"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView android:id="@+id/header_waves"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/waves"
                    android:layout_alignParentTop="true"
                    android:adjustViewBounds="true" />

                <LinearLayout android:id="@+id/button_panel"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:orientation="horizontal"
                    android:layout_alignTop="@id/header_waves"
                    android:layout_alignEnd="@id/header_waves"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:weightSum="2">

                    <ImageView android:id="@+id/chat"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/chat"
                        android:layout_marginHorizontal="10dp"
                        android:onClick="viewChat"/>

                    <ImageView android:id="@+id/bell"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bell"
                        android:onClick="viewNotification"/>

                </LinearLayout>

                <TextView android:id="@+id/welcome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="40sp"
                    android:textColor="@color/grey"
                    android:text="Hi,"
                    android:layout_alignTop="@id/button_panel"
                    android:layout_marginTop="50dp"
                    android:layout_marginHorizontal="20dp"/>

                <ImageView android:id="@+id/show_level"
                    android:layout_alignStart="@id/welcome"
                    android:layout_alignTop="@id/welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="55dp"
                    android:src="@drawable/level_bg"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignTop="@id/show_level" android:layout_alignBottom="@id/show_level"
                    android:layout_alignStart="@id/show_level" android:layout_alignEnd="@id/show_level"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Level "
                        android:textSize="20sp"
                        android:textColor="@color/teal" />

                    <TextView android:id="@+id/level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="45"
                        android:textSize="20sp"
                        android:textColor="@color/teal" />
                </LinearLayout>

                <!--Asked-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@id/header_waves"
                    android:layout_alignLeft="@id/show_level"
                    android:layout_marginBottom="15dp">

                    <TextView android:id="@+id/asked"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="3"
                        android:textStyle="bold"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Asked"
                        android:textSize="20sp"/>
                </LinearLayout>

                <!--Solved-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_alignRight="@id/button_panel"
                    android:layout_alignBottom="@id/header_waves"
                    android:layout_marginBottom="15dp">

                    <TextView android:id="@+id/solved"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="120"
                        android:textStyle="bold"
                        android:textSize="25sp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Solved"
                        android:textSize="20sp"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MIKE"
            android:textSize="300dp"/>

    </LinearLayout>

    </LinearLayout>

</ScrollView>
